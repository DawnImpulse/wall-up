<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dawnimpulse.wallup">

    <meta-data
        android:name="firebase_crashlytics_collection_enabled"
        android:value="false" />

    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".utils.App"
        android:icon="@drawable/vd_wallup_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Splash Screen -->
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/AppTheme.Fullscreen.Preview">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity -->
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme.Fullscreen" />

        <!-- Image Activity -->
        <activity
            android:name=".activities.ImageActivity"
            android:theme="@style/AppTheme.Fullscreen" />

        <!-- Cropping Activity -->
        <activity
            android:name=".activities.CropActivity"
            android:theme="@style/AppTheme.Fullscreen" />

        <!-- Artist Profile -->
        <activity
            android:name=".activities.ArtistProfileActivity"
            android:theme="@style/AppTheme.Fullscreen" />

        <!-- General Images -->
        <activity
            android:name=".activities.GeneralImagesActivity"
            android:theme="@style/AppTheme.Fullscreen" />

        <!-- Changes Activity -->
        <activity
            android:name=".activities.ChangesActivity"
            android:theme="@style/AppTheme.Fullscreen" />

        <!-- Collections Layout -->
        <activity
            android:name=".activities.CollectionLayoutActivity"
            android:theme="@style/AppTheme.Fullscreen" />

        <!--Collection-->
        <activity
            android:name=".activities.CollectionActivity"
            android:theme="@style/AppTheme.Fullscreen"></activity>
    </application>

</manifest>