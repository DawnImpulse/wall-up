<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dawnimpulse.wallup">

    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".utils.App"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- File provider for Android 7+ -->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.dawnimpulse.wallup"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_path" />
        </provider>

        <!-- Crashlytics -->
        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="false" />

        <!-- New Aspect Ratio -->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />

        <!-- ML Model -->
        <meta-data
            android:name="com.google.firebase.ml.vision.DEPENDENCIES"
            android:value="label" />

        <!-- Splash Screen -->
        <activity
            android:name=".activities.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Fullscreen.Preview">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity -->
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Fullscreen" />

        <!-- Image Activity -->
        <activity
            android:name=".activities.ImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="unsplash.com"
                    android:pathPrefix="/photos/"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <!-- Cropping Activity -->
        <activity
            android:name=".activities.CropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Fullscreen" />

        <!-- Artist Profile -->
        <activity
            android:name=".activities.ArtistProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Fullscreen" />

        <!-- General Images -->
        <activity
            android:name=".activities.GeneralImagesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Fullscreen" />

        <!-- Changes Activity -->
        <activity
            android:name=".activities.ChangesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Fullscreen"></activity>

        <!-- Collections Layout -->
        <activity
            android:name=".activities.CollectionLayoutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Fullscreen" />

        <!-- Collection -->
        <activity
            android:name=".activities.CollectionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Fullscreen" />

        <!--Search-->
        <activity android:name=".activities.SearchActivity"
            android:theme="@style/AppTheme.Fullscreen"/>
    </application>

</manifest>