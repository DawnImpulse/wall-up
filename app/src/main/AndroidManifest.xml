<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dawnimpulse.wallup">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="false"
        tools:ignore="GoogleAppIndexingWarning,MissingApplicationIcon"
        tools:replace="android:supportsRtl">

        <activity
            android:name=".ui.activities.ImageActivity"
            android:theme="@style/AppTheme.Fullscreen" /> <!--Image Activity-->

        <activity
            android:name=".ui.activities.HomescreenActivity"
            android:theme="@style/AppTheme.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Homescreen -->

        <activity
            android:name=".ui.activities.CollectionsActivity"
            android:theme="@style/AppTheme.NoActionBar"/> <!-- Collections Activity -->

        <activity
            android:name=".ui.activities.RandomActivity"
            android:theme="@style/AppTheme.NoActionBar"> <!-- Random Activity -->
        </activity>
    </application>

</manifest>