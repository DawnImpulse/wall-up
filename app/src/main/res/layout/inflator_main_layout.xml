<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="16dp"
    android:background="@color/black">

    <com.makeramen.roundedimageview.RoundedImageView
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:id="@+id/mainImage"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:elevation="2dp"
        android:scaleType="centerCrop"
        app:riv_border_color="@color/white"
        app:riv_corner_radius="8dp"
        app:riv_mutate_background="true" />

    <!--author layout-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/mainImage"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <!--image-->
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/mainCircleImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            app:riv_oval="true" />

        <!--name-->
        <me.grantland.widget.AutofitTextView
            android:id="@+id/mainName"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/mainLikeL"
            android:layout_toRightOf="@id/mainCircleImage"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="Amy Blake"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <!--like-->
        <FrameLayout
            android:id="@+id/mainLikeL"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/mainLike"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/vd_like_outline" />
        </FrameLayout>

        <!--3 dot-->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mainThreeDot"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            app:srcCompat="@drawable/vd_dots_vertical" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:alpha="0.5"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/line_dashed"
        android:layerType="software" />

</RelativeLayout>